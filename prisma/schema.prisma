generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Donation {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  address           String
  donationDate      DateTime     @unique
  totalParticipants String
  bountyAmount      String
  // participants      Participant[]
}

