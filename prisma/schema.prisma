generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Donation {
  id                String?      @unique @map("_id") // MongoDB's built-in _id field @unique
  address           String
  donationDate      DateTime     @unique
  totalParticipants String
  bountyAmount      String
  // participants      Participant[]
}

model Participant {
  id         String      @unique @map("_id") // MongoDB's built-in _id field
  name       String
  donationId String      // Foreign key to Donation
  // donation   Donation    @relation(fields: [donationId], references: [id])
}
